@model RegistroViewModel;

<div class="container bg-dark hcalc d-flex justify-content-center align-items-center">
    <div class="row w-100">
        <div class="col-md-9 mt-2 mx-auto">
            <div class="card p-2  shadow-lg">
                <div class="d-flex w-100">
                    <div>
                        <header class="text-center bg-dark p-5 h-100">
                            <partial name="_pvLogo_brand" />
                        </header>
                    </div>
                    <div class="w-100 p-3">
                        <div class="card-header text-center bg-primary text-white">
                            <h4>Registrarse</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="Index" method="post">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Nombre" class="form-label"></label>
                                            <input asp-for="Nombre" class="form-control bg-dark text-light" placeholder="Ingresa tu nombre" />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mt-2">
                                            <label asp-for="Telefono" class="form-label"></label>
                                            <input asp-for="Telefono" class="form-control bg-dark text-light" placeholder="Ingresa tu teléfono" />
                                            <span asp-validation-for="Telefono" class="text-danger"></span>
                                        </div>


                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email" class="form-label"></label>
                                            <input asp-for="Email" class="form-control bg-dark text-light" placeholder="Ingresa tu dirección de email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mt-2">
                                            <label asp-for="Password" class="form-label"></label>
                                            <input asp-for="Password" type="password" class="form-control bg-dark text-light" placeholder="Ingresa una contraseña" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mt-2">
                                            <label asp-for="ConfirmarPassword" class="form-label">Confirmar Password</label>
                                            <input asp-for="ConfirmarPassword" type="password" class="form-control bg-dark text-light" placeholder="Repite la contraseña" />
                                            <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
                                </div>
                                <div class="text-center mt-3">
                                    ¿Ya tienes cuenta? <a asp-controller="Login" asp-action="Index" class="text-decoration-none">Inicia sesión aquí</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>