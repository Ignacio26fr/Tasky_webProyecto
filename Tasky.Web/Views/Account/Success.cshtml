@{
    ViewData["Title"] = "Verificación";
}
<div class="container bg-dark hcalc d-flex justify-content-center align-items-center">
    <div class="row w-100 ">
        <div class="col-10 col-md-7  mx-auto">
            <div class="card shadow-lg p-2">
                <div class="d-flex w-100">
                    <div>
                        <header class="text-center bg-dark p-5 h-100">
                            <partial name="_pvLogo_brand" />
                        </header>
                    </div>
                    <div class="w-100 p-4">
                        <div class="card-header text-center bg-primary text-white">
                            <h4>Verificación de cuenta</h4>
                        </div>
                        <div class="card-body text-center">
                            <div>
                                <h4 class="text-center">Gracias por registrarte!</h4>
                                <p class="mt-3 text-opacity">La cuenta fué verificada con exito.</p>
                                <p class="text-opacity">Ya podes iniciar sesión con tu cuenta para comenzar.</p>
                            </div>
                            <div>
                                <a class="btn btn-primary mt-5" asp-action="Index" asp-asp-controller="Login">Iniciar Sesión</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

